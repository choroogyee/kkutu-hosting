extends layout

block Subject
	title 초롱끄투 - 마음껏놀자! 초롱끄투

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='width: 100%;', align="center")
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='/img/kkutu/short_logo.png', ailgn="center")
	div(style='float: left; width: 300px')
		a(href='/?server=0')
				img(src= '/img/game_start.png', style='width: 320px;')
	div(style='float: left; margin-top: 132px; width: 2%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: right; width: 60%;')
		div(class='board')
			fieldset
				legend 업데이트 내역
				iframe(src='/kkutu_bulletin.html' style='width: 100%; height: 120%;')
	+separator(10)

block Bottom
	div.bottom-legal!= L('dictionarySupport')